<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Backup cloud consentito solo per report compiti, compiti assegnati e codici compito. -->
        <include domain="file" path="datastore/homework_reports.preferences_pb" />
        <include domain="file" path="datastore/saved_homeworks.preferences_pb" />
        <include domain="file" path="datastore/homework_codes.preferences_pb" />
    </cloud-backup>
    <device-transfer>
        <!-- Stesse regole anche per trasferimento diretto tra dispositivi. -->
        <include domain="file" path="datastore/homework_reports.preferences_pb" />
        <include domain="file" path="datastore/saved_homeworks.preferences_pb" />
        <include domain="file" path="datastore/homework_codes.preferences_pb" />
    </device-transfer>
</data-extraction-rules>
